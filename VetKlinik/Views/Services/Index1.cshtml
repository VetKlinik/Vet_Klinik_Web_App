@model List<Hizmetler>

<div id="sizedBox"></div>

<div class="card">
    <div class="card-header">
        <h2>Hizmetler</h2>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            @Html.ActionLink("Ekle", "Ekle", "Services", null, new { @class = "btn btn-primary my-3" })
            <thead>
                <tr>
                    <th>Sıra No</th>
                    <th>Ad</th>
                    <th>Açıklama</th>
                    <th>Icon Sınıfı</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].Ad</td>
                        <td>@Model[i].Aciklama</td>
                        <td>@Model[i].Icon</td>
                        <td>@Html.ActionLink("Düzenle", "Guncelle", "Services", new { id = Model[i].Id }, new { @class = "btn btn-warning" })</td>
                        <td>@Html.ActionLink("Sil", "Sil", "Services", new { id = Model[i].Id }, new { @class = "btn btn-warning" })</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>