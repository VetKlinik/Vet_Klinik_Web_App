@model List<DoktorlarViewModel>

<section class="doctors" id="doctors">
    
    <h1 class="heading"> <span> Kıymetli </span>Doktorlarımız</h1>

    <div class="box-container">
        @foreach (var doktor in Model)
        {
            <div class="box">
                <img src="@doktor.FotoUrl" style="height:300px;width:300px;" alt="" />
                <h3>@doktor.Ad @doktor.Soyad</h3>
                <span>@doktor.Unvan</span>
                <div class="share">
                    @if (!string.IsNullOrEmpty(doktor.Facebook))
                    {
                        <a href="@doktor.Facebook" class="fab fa-facebook-f"></a>
                    }
                    @if (!string.IsNullOrEmpty(doktor.Instagram))
                    {
                        <a href="@doktor.Instagram" class="fab fa-instagram"></a>
                    }
                    @if (!string.IsNullOrEmpty(doktor.LinkedIn))
                    {
                        <a href="@doktor.LinkedIn" class="fab fa-linkedin"></a>
                    }
                    @if (!string.IsNullOrEmpty(doktor.X))
                    {
                        <a href="@doktor.X" class="fab fa-twitter"></a>
                    }
                </div>
            </div>
        }
    </div>
</section>


